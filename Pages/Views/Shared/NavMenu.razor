        <AuthorizeView Roles="vendor">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Offers/Create">
                    <span class="oi oi-plus" aria-hidden="true"></span> Post Offer
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="SalesPoints">
                    <span class="oi oi-spreadsheet" aria-hidden="true"></span> Manage Sales Points
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Roles="buyer">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="BecomeVendor">
                    <span class="oi oi-plus" aria-hidden="true"></span> Become a vendor
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Roles="admin">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="FuelTypes">
                    <span class="oi oi-spreadsheet" aria-hidden="true"></span> Manage fuel types
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView>
        <Authorized>
            <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Identity/Account/Manage" Match="NavLinkMatch.All">
                        <span class="oi oi-person" aria-hidden="true"></span> Manage your account
                    </NavLink>
                    </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Identity/Account/Logout" Match="NavLinkMatch.All">
                   <span class="oi oi-account-logout" aria-hidden="true"></span>Log out
                </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Identity/Account/Login" Match="NavLinkMatch.All">
                        <span class="oi oi-account-login" aria-hidden="true"></span>Log in
                    </NavLink>
                </div>
                    <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Identity/Account/Register" Match="NavLinkMatch.All">
                        <span class="oi oi-clipboard" aria-hidden="true"></span>Register
                </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>


    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
