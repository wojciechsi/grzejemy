@page "/FuelTypes/Update/{Id:int}"
@inject Data.ApplicationDbContext dbContext
@attribute [Authorize(Roles = "admin")]

<h1>Edycja "@fuelTypeToUpdate.Name"</h1>

<EditForm Model="fuelTypeToUpdate" OnValidSubmit="UpdatePostAsync">
    <div class="form-group mb-3">
        <label for="name">Nazwa</label>
        <InputText @bind-Value="fuelTypeToUpdate.Name" class="form-control" id="name" />
    </div>

    <DataAnnotationsValidator />
    <ValidationSummary />

    <button class="btn btn-warning" type="submit">
        Zatwierdź
    </button>

    <button @onclick="@(() => NavigationManager.NavigateTo("/FuelTypes"))" class="btn btn-secondary">
        Anuluj
    </button>
</EditForm>

@inject IJSRuntime JsRuntime
@inject NavigationManager NavigationManager


