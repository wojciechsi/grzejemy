@page "/FuelTypes/Create"
@inject Data.ApplicationDbContext dbContext
@inject AuthenticationStateProvider _authenticationStateProvider
@attribute [Authorize(Roles = "admin")]

<h3>Create fuel type</h3>

<EditForm Model="fuelTypeToAdd" OnValidSubmit="CreatePostAsync">
    <div class="form-group mb-3">
        <label for="name">Name</label>
        <InputText @bind-Value="fuelTypeToAdd.Name" class="form-control" id="name" />
    </div>

    <DataAnnotationsValidator />
    <ValidationSummary />

    <button class="btn btn-success" type="submit">
        Create
    </button>

    <button @onclick="@(() => NavigationManager.NavigateTo("/FuelTypes"))" class="btn btn-secondary">
        Cancel
    </button>
</EditForm>

@inject IJSRuntime JsRuntime
@inject NavigationManager NavigationManager

