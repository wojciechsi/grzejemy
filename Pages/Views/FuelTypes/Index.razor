@page "/FuelTypes"
@using grzejemy.Models
@inject Data.ApplicationDbContext dbContext
@attribute [Authorize(Roles = "admin")]

<h3>Zarządzaj typami opału</h3>

<a href="FuelTypes/Create" class="btn btn-success btn-lg w-20 my-4">+ Create</a>

<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th scope="col">Typ opału</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (fuelTypes != null)
        {
            foreach (var fuelType in fuelTypes)
            {
                <tr>
                    <td>@fuelType.Name</td>
                    <td>
                        <a href="FuelTypes/Update/@fuelType.Id" class="btn btn-warning btn-lg w-20 my-2">
                            Edytuj
                        </a>
                        <button @onclick="() => DeleteFuelTypeAsync(fuelType)" class="btn btn-danger btn-lg w-20 my-2">
                            Usuń
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


@inject IJSRuntime JsRuntime

