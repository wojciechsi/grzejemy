@page "/Offers/{Id:int}/Comments/Create"
@inject Data.ApplicationDbContext dbContext
@inject AuthenticationStateProvider _authenticationStateProvider

<h3>Create offer</h3>

<EditForm Model="commentToAdd" OnValidSubmit="CreateCommentAsync">
    <div class="form-group mb-3">
        <label for="paidPrice">Paid price</label>
        <InputNumber @bind-Value="commentToAdd.PaidPrice" class="form-control" id="paidPrice" />
    </div>
    <div class="form-group mb-3">
        <label for="comment">Comment</label>
        <InputText @bind-Value="commentToAdd.Content" class="form-control" id="comment" />
    </div>
    <RadzenFileInput @bind-Value=@imageString TValue="string" Class="w-100" />
    <DataAnnotationsValidator />
    <ValidationSummary />

    <button class="btn btn-success" type="submit">
        Create
    </button>

    <button @onclick="@(() => NavigationManager.NavigateTo("/Offers/" + @offer.Id + "/Comments"))" class="btn btn-secondary">
        Cancel
    </button>
</EditForm>


@inject IJSRuntime JsRuntime
@inject NavigationManager NavigationManager
